@model ContosoUniversity.Models.Department
@{
    ViewData["Title"] = "Create";
}
<h2>Create new department</h2>
<hr />
<div class="row">
    <div class="row">
        <form asp-action="Create">
            <input type="hidden" asp-for="RowVersion" value="@Html.Raw("0")"/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div>
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="control-label"></input>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="Budget" class="control-label"></label>
                <input asp-for="Budget" class="control-label"></input>
                <span asp-validation-for="Budget" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="control-label"></input>
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="FavoriteLesson" class="control-label"></label>
                <input asp-for="FavoriteLesson" class="control-label"></input>
                <span asp-validation-for="FavoriteLesson" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="InstructorID" class="control-label"></label>
                <select asp-for="InstructorID" class="form-control" asp-items="ViewBag.InstructorId">
                    <option value="">-- Select Administrator --</option>
                </select>
                <span asp-validation-for="InstructorID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>

        </form>
        <a asp-action="Index" class="btn btn-outline-primary">Back to Index</a>
    </div>
</div>